--For each pattern of atomic changes corresponding to metamodel changes create a ComplexChange.
--in: result25.emfdiff, diff.ecore
--Also ExamXMLEvol11 as input
--out: result25Extended, diffExtended
module Inline_subclass; -- Module Template
create result25Extended : diffExtended from result25 : DIFF, Assistant : Ecore;

--returns the lenght of "Assistant"
helper def : MMSize : Integer =11;
--"Ecore"
helper def : EcoreSize : Integer =7;
--"resultxx"
helper def : resultSize : Integer =10;
helper def : param : String ='';

--delete class
helper def : getRemoveModelElement : Sequence(String) =
	DIFF!RemoveModelElement.allInstances()->select(e|not e.oclIsUndefined())->asSequence()
	->collect(e|e.leftElement.toString().split('!')->last());

--add attribute
helper def : getAddModelElement : Sequence(String) =
	DIFF!AddModelElement.allInstances()->select(e|not e.oclIsUndefined())->asSequence()
	->collect(e|e.rightElement.toString().split('!')->last());

helper def : getLeftParent : Sequence(String) =
	DIFF!AddModelElement.allInstances()->select(e|not e.oclIsUndefined())->asSequence()
	->collect(e|e.leftParent.toString().split('!')->last());

helper def : classIsDeleted : Boolean =
	self.getRemoveModelElement.size() > 0;

--param: OpenElement
--return: Sequence{'OEAttribute'}
helper def : getAttributesFromClass (param : String) : Sequence(String) =
--	Ecore!EClassifier.allInstances()->select(e|e.name=param)->collect(e|e.eAttributes)
--	->first()->collect(e|e.toString().split('!')->last());

	if Ecore!EClassifier.allInstances()->select(e|e.name=param).size()>0 then
		Ecore!EClassifier.allInstances()->select(e|e.name=param)
		->collect(e|e.eStructuralFeatures)->first()->collect(e|e.toString().split('!')->last())
	else
		Sequence{}
	endif;


--params: metaclass: ExamElement, metaproperty: OEAttribute
--returns if metaproperty is deleted in the deleted subclass of the metaclass
helper def : isDeletedinSubclass (metaclass : String, metaproperty : String) : Boolean =
	self.getSons(metaclass).indexOf(self.getRemoveModelElement->first())>0 and
	self.getAttributesFromClass(self.getRemoveModelElement->first()).indexOf(metaproperty)>0;

helper def : getSons (param : String) : Sequence(String) =
	Ecore!EClassifier.allInstances()->select(e|e.eSuperTypes.size()>0)
	->select(e|e.eSuperTypes->collect(e|e.toString()).indexOf('Assistant!'.concat(param)) > 0)
	->asSequence()->collect(e|e.toString().split('!')->last());

helper def : isSon (son : String, father : String) : Sequence(String) =
--	Ecore!EClassifier.allInstances()->select(e|e.eSuperTypes.size()>0)
--	->select(e|e.eSuperTypes->collect(e|e.toString()).indexOf('Assistant!'.concat(father)) > 0)
--	->asSequence()->select(e|e.toString().split('!')->last()=son).size()>0;

	self.getSons(father).indexOf(son) > 0;

--param:ExamElement
helper def : attributesDeletedFromSubclass (param : String): Boolean =
	let attributes : Sequence(String) =
		--Sequence{'OEAttribute'}
		self.getAddModelElement in
	attributes->iterate(p; y : Boolean = false |
		if (self.isDeletedinSubclass(param, p))--param, p
		--if (self.isDeletedinSubclass('result25!'+p.toString().substring(self.MMSize, p.toString().size())))
		then
			true
		else
			false
		endif
	);
		
helper def : AMEImplied : Sequence(DIFF!AddModelElement) =
	DIFF!AddModelElement.allInstances()->select(e|not e.oclIsUndefined())->asSequence()
	->select(e|self.attributesDeletedFromSubclass(e.leftParent.toString().split('!')->last()));
		
helper def : RMEImplied : Sequence(DIFF!RemoveModelElement) =
	if self.AMEImplied.size()>0 then
		DIFF!RemoveModelElement.allInstances()->select(e|not e.oclIsUndefined())->asSequence()
		->select(e|self.isSon(e.leftElement.toString().split('!')->last(), self.AMEImplied->first().leftParent.toString().split('!')->last()))
	else
		Sequence{}
	endif;
	

--param: ExamElement
helper def : diffElements : Sequence(DIFF!DiffElement) =
	self.RMEImplied.union(self.AMEImplied);


		
--check that its attributes are those deleted from the subclasses
rule InlineSubclass {
	from
		s : DIFF!DiffModel
		(
		if self.classIsDeleted
		then
			if self.attributesDeletedFromSubclass (self.getLeftParent->first())
			then
				true
			else
				false
			endif
		else
			false
		endif
		)
	to
		t : diffExtended!DiffModel (
			left <- s.left,
			origin <- s.origin,
			right <- s.right,
			ownedElements <- s.ownedElements,
			complexChanges <- Sequence{c}
		),
		c : diffExtended!ComplexChange (
			impact <- #resolvable,
			changeType <- #Inline_subclass,
			atomicChanges <- self.diffElements
			
		)	
		do{
		
			self.RMEImplied->toString().println();
			self.AMEImplied->toString().println();
			
			
		}
}












